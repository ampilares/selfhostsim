CLIENT_ID=
CLIENT_SECRET=
PORT=3002
MONGO_URL=
MONGO_DB_NAME=
COLLECTION_NAME=
WEBHOOK_PUBLIC_KEY=

# Public URL for OAuth redirect URI generation. If not set, /install uses the incoming request host.
# IMPORTANT: The resulting redirect URI must be registered in your GHL OAuth app.
GHL_PUBLIC_BASE_URL=http://localhost:3002

# Set to 1/true when running behind a reverse proxy so req.protocol is correct.
TRUST_PROXY=1

# SelfhostSIM API (internal calls for processing provider outbound messages)
SELFHOSTSIM_API_BASE_URL=http://selfhostsim-api:3001/api/v1
SELFHOSTSIM_INTERNAL_SECRET=
SELFHOSTSIM_INTERNAL_HEADER_NAME=x-internal-secret
SELFHOSTSIM_FORWARD_TIMEOUT_MS=8000

# API -> GHL service internal calls (inbound SMS sync)
GHL_INTERNAL_SECRET=
GHL_INTERNAL_HEADER_NAME=x-internal-secret

# GHL inbound message configuration
# IMPORTANT: Replace this example value with your actual conversation provider ID from GHL
# This ID should be obtained from your GoHighLevel setup, not copied directly from this example
GHL_CONVERSATION_PROVIDER_ID=