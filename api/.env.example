PORT=3001
MONGO_URI=mongodb://adminUser:adminPassword@selfhostsim-db:27017/selfhostsim?authSource=admin

# to setup initial password
MONGO_ROOT_USER=adminUser
MONGO_ROOT_PASS=adminPassword

# Default Admin User
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=selfhostsim

# JWT Configuration
JWT_SECRET=secret # change this to a secure random string
JWT_EXPIRATION=60d

# Internal service authentication (used by `ghl/` to call internal API routes)
INTERNAL_SECRET= # set a strong random string
INTERNAL_API_KEY_HEADER_NAME=x-internal-secret

# API -> GHL service internal calls (inbound SMS sync)
GHL_SERVICE_BASE_URL=http://selfhostsim-ghl:3002
GHL_INTERNAL_SECRET= # set a strong random string (should differ from INTERNAL_SECRET)
GHL_INTERNAL_HEADER_NAME=x-internal-secret
GHL_INBOUND_MAX_ATTEMPTS=5
GHL_INBOUND_RETRY_BASE_DELAY_MS=10000
GHL_INBOUND_RETRY_MAX_DELAY_MS=300000
GHL_INBOUND_RETENTION_DAYS=30

#Update from Firebase service account json file
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
FIREBASE_CLIENT_ID=
FIREBASE_CLIENT_C509_CERT_URL=

# SMS Queue Configuration
USE_SMS_QUEUE=false
REDIS_URL=redis://localhost:6379 # if queue is enabled,  redis url is required

# Phone Number Normalization
# Default country code for phone numbers without country prefix (e.g., 10-digit numbers)
# Uses North America (+1) by default. Change to your region's country code (e.g., +44 for UK, +61 for Australia)
DEFAULT_PHONE_COUNTRY_CODE=+61
